[alias]
  cleanup = "!f() { \
      (git switch -c cleanup-repo-branch || git switch cleanup-repo-branch) && \
      git branch -D main; \
      git branch -D master; \
      git reset --hard && \
      git clean -df && \
      git fetch -a && \
      (git checkout main || git checkout master) && \
      git submodule update --init --recursive -f && \
      git branch | grep -ve '^*' | xargs git branch -D && \
      git remote prune origin && \
      git gc; \
    }; f"
  mailmap-helper = shortlog --summary --numbered --email --all
  # Fetch large files from https://stackoverflow.com/a/42544963
  fetch-large-files = "!f() { \
      git rev-list --objects --all \
      | git cat-file --batch-check='%(objecttype) %(objectname) %(objectsize) %(rest)' \
      | sed -n 's/^blob //p' \
      | sort --numeric-sort --key=2 \
      | cut -c 1-12,41- \
      | $(command -v gnumfmt || echo numfmt) --field=2 --to=iec-i --suffix=B --padding=7 --round=nearest; \
    }; f"
[commit]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[diff]
	submodule = log
[fetch]
  recurseSubmodules = on-demand
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[status]
  submoduleSummary = false
[url "https://"]
	insteadOf = git://
[user]
	name = Chad Wade Day, Jr.
	email = cdayjr@users.noreply.github.com
  signingkey = 9041D7756B13B2DB
[include]
  path = ~/.local/share/includes/medbridge-config/gitconfig
[include]
  path = ~/.local/share/includes/extra-config/gitconfig
[pull]
  ff = only
[init]
  defaultBranch = main
[core]
  autocrlf = input
