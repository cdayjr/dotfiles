<?xml version="1.0"?>
<ruleset name="Default Configuration">
   <description>Store PHPCS default configuration</description>
   <!-- Enable colors by default -->
   <config name="colors" value="1"/>
   <arg name="colors"/>
   <!-- Use PSR-12 rules as default -->
   <config name="default_standard" value="PSR12"/>
   <rule ref="PSR12"/>
   <!-- Show progress -->
   <config name="show_progress" value="1"/>
   <arg value="p"/>
   <!-- Use PSR-12 default tab width -->
   <config name="tab_width" value="4"/>
   <!-- Show sniff names in reports -->
   <arg value="s"/>
</ruleset>
